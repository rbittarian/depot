<div id = "depot_form">
	<%if flash[:alert]%>
		<p id="notice"><%=flash[:alert]%></p>
	<%end%>

	<%= form_tag do %>
		<fieldset>
			<legend>Please Log In<legend>
		
			<div>
				<label for ="name">Name:</label>
				<%= text_field_tag :name, params[:name] %>
			</div>
			<div>
				<label for ="password">Password:</label>
				<%= text_password_tag :password, params[:password] %>
			</div>
		
			<div>
				<%= submit_tag 'Log In'%>
			</div>
		</fieldset>
	<%end%>
</div>
			
